@model CMS.Models.ViewModels.FooterViewModel

<!-- ::::::  FOOTER  ::::::  -->
<footer class="footer">
    <div class="footer__top gray-bg p-tb-50 m-t-50">
        <div class="container">
            <div class="row">
                <div class="col-xl-5 col-lg-6 col-12">
                    @Html.Partial("~/Views/Shared/Footer/_FooterAbout.cshtml", Model.Info)
                </div>
                <!-- Menu -->
                <div class="col-xl-3 col-lg-3 col-sm-6 col-12">
                    <div class="footer__menu">
                        <h4 class="footer__nav-title">@Html.Raw("Liên kết")</h4>
                        <ul class="footer__nav">
                            <li class="footer__list">
                                <a href="/" title="@Html.Raw("Trang chủ")" class="footer__link">
                                    @Html.Raw("Trang chủ")
                                </a>
                            </li>
                            <li class="footer__list">
                                <a href="/" title="@Html.Raw("Giới thiệu")" class="footer__link">
                                    @Html.Raw("Giới thiệu")
                                </a>
                            </li>
                            <li class="footer__list">
                                <a href="/" title="@Html.Raw("Tin tức")" class="footer__link">
                                    @Html.Raw("Tin tức")
                                </a>
                            </li>
                            <li class="footer__list">
                                <a href="/" title="@Html.Raw("Tuyển dụng")" class="footer__link">
                                    @Html.Raw("Tuyển dụng")
                                </a>
                            </li>
                            <li class="footer__list">
                                <a href="/warranty-policy" title="@Html.Raw("Chính sách bảo hành")" class="footer__link">
                                    @Html.Raw("Chính sách bảo hành")
                                </a>
                            </li>
                            <li class="footer__list">
                                <a href="/" title="@Html.Raw("Liên hệ")" class="footer__link">
                                    @Html.Raw("Liên hệ")
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                <!-- Product -->
                <div class="col-xl-4 col-lg-4 col-sm-6 col-12">
                    <div class="footer__menu">
                        @Html.Partial("~/Views/Shared/Footer/_FooterCategories.cshtml", Model.Categories)
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer Bottom -->
    <div class="footer__bottom">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-8 col-12">

                </div>
                <div class="col-lg-4 col-12">
                    <div class="footer__copyright-text">
                        <p>Copyright <a href="#">Fastup Tech</a>. All Rights Reserved</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</footer>