@model CMS.Models.Post

<!-- :::::: BREADCRUMB :::::: -->
<div class="page-breadcrumb">
    <div class="container">
        <div class="row">
            <div class="col-12 text-right">
                <ul class="page-breadcrumb__menu">
                    <li class="page-breadcrumb__nav"><a href="/" title="@Html.Raw("Trang chủ")">@Html.Raw("Trang chủ")</a></li>
                    <li class="page-breadcrumb__nav active">@Html.Raw("Chính sách bảo hành")</li>
                </ul>
            </div>
        </div>
    </div>
</div>

<!-- :::::: CONTENT :::::: -->
<main id="main-container" class="main-container">
    <div class="container">
        <div class="row flex-column-reverse flex-lg-row">
            <!-- Start Leftside - Sidebar -->
            <div class="col-lg-3">
                @Html.Action("SidebarCategories", "ProductCategories")
            </div>
            <!-- Start Rightside - Content -->
            <div class="col-lg-9">
                <div class="blog">
                    <div class="row">
                        <!-- Start Single Blog List -->
                        <div class="col-12">
                            <div class="blog__type-single">
                                <div class="blog__content">
                                    <h2 class="title title--small title--thin" style="font-weight: 500; color: #e71e40;">@Html.Raw("CHÍNH SÁCH BẢO HÀNH")</h2>
                                    <div class="para m-tb-20">
                                        @Html.Raw(Model.Content)
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>